        <Button Content="Prodaja Dela" Margin="77,161,0,0" Click="Button_Click_3" Width="100" Height="30" Background="#FFB0B0B0" FontFamily="HP Simplified Light" FontSize="14" Opacity="0.95" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2"/>
        <Button Content="Nabavka Dela" Margin="77,204,0,0" Click="Button_Click_4" Width="100" Height="30" Background="#FFB0B0B0" FontFamily="HP Simplified Light" FontSize="14" Opacity="0.95" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2"/>
        <Button Content="Klijenti" Margin="77,250,0,0" Click="Button_Click_5" Width="100" Height="30" Background="#FFB0B0B0" FontFamily="HP Simplified Light" FontSize="14" Opacity="0.95" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2"/>
    </Grid>
</Window>
