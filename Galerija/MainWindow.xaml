            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Dela" Margin="77,118,0,0" Click="Button_Click_1" Width="100" Height="30" Background="#FFB0B0B0" FontFamily="HP Simplified Light" FontSize="14" Opacity="0.95" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2"/>
